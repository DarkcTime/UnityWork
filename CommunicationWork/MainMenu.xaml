      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationWork"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="Blue">
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Click="UserAccount_Click" Content="User"/>
            <Popup StaysOpen="False" Name="PopupUser" Placement="Mouse">
                <Grid>
                    <StackPanel>
                        <Button Content="Изменить"/>
                        <Button Content="выйти"/>
                    </StackPanel>
                </Grid>
            </Popup>
            
        </Grid>
        <Frame Name="ContentFrame" NavigationUIVisibility="Hidden" Grid.Row="1">
            
        </Frame>
    </Grid>
</Page>
